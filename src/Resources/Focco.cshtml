<!DOCTYPE html />

<html>
<head>
	<title>@Model.Title</title>
	<meta http-equiv="content-type" content="text/html; charset=UTF-8" />
	<link href="@Model.PathToCss" rel="stylesheet" media="all" type="text/css" />
	<script src="prettify.js" type="text/javascript"></script>
</head>
<body onload="prettyPrint()">
	<div id="container">
		<div id="background"></div>
		@if (Model.Sources.Length > 1) {
			<div id="jump_to">
				Jump To &hellip;
				<div id="jump_wrapper">
					<div id="jump_page">
						@for (var i = 0; i < Model.Sources.Length; i++) {
							<a class="source" href="@Model.GetSourcePath(Model.Sources[i])">
								@Model.Sources[i].Substring(2)
							</a>
						}
					</div>
				</div>
			</div>
		}
		<table cellpadding="0" cellspacing="0">
			<thead>
				<tr>
					<th class="docs">
						<h1>@Model.Title</h1>
					</th>
					<th class="code"></th>
				</tr>
			</thead>
			<tbody>
				@for (var i = 0; i < Model.Sections.Length; i++) {
					<tr id="section_@(i + 1)">
						<td class="docs">
							<div class="pilwrap">
								<a class="pilcrow" href="#section_@(i + 1)">&#182;</a>
							</div>
							@Model.Sections[i].DocsHtml
						</td>
						<td class="code">
							<pre><code class='prettyprint'>@Model.Sections[i].CodeHtml</code></pre>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</body>
</html>
