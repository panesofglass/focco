<!DOCTYPE html />

<html>
<head>
    <title>@Title</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    @foreach (var stylesheet in Stylesheets) {
    <link href="@GetResourcePath(stylesheet)" rel="stylesheet" media="all" type="text/css" />
    }
    @foreach (var script in Scripts) {
    <script src="@GetResourcePath(script)" type="text/javascript"></script>
    }
</head>
<body onload="prettyPrint()">
    <div id="container">
        <div id="background"></div>
        @if (@Sources.Length > 1) {
            <div id="jump_to">
                Jump To &hellip;
                <div id="jump_wrapper">
                    <div id="jump_page">
                    @for (var i = 0; i < Sources.Length; i++) {
                        <a class="source" href="@GetSourcePath(Sources[i])">
                            @Sources[i].Substring(2)
                        </a>
                    }
                    </div>
                </div>
            </div>
        }
        <table cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th class="docs">
                        <h1>@Title</h1>
                    </th>
                    <th class="code"></th>
                </tr>
            </thead>
            <tbody>
            @for (var i = 0; i < Sections.Length; i++) {
                <tr id="section_@(i + 1)">
                    <td class="docs">
                        <div class="pilwrap">
                            <a class="pilcrow" href="#section_@(i + 1)">&#182;</a>
                        </div>
                        @Sections[i].DocsHtml
                    </td>
                    <td class="code">
                        <pre><code class='prettyprint'>@Sections[i].CodeHtml</code></pre>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</body>
</html>
